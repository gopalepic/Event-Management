# Copy this file to .env and fill in your values
# DO NOT commit .env file to git!

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"
GOOGLE_REDIRECT_URL="http://localhost:5000/api/auth/google/callback"

# Security Configuration
FRONTEND_URL="http://localhost:3000"
FRONTEND_CALLBACK_URL="http://localhost:3000/auth/callback"
FRONTEND_ERROR_URL="http://localhost:3000"
PORT=5000

# Production Settings
# NODE_ENV=production
# For production, change URLs to your deployed frontend domain:
# FRONTEND_URL="https://yourdomain.com"
# FRONTEND_CALLBACK_URL="https://yourdomain.com/auth/callback"
